{
	"$schema": "https://json.schemastore.org/tsconfig",
	"_version": "20.1.0",
	"compilerOptions": {
		"lib": [
			"ES2023"
		],
		"module": "Node16",
		"target": "ES2022",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"moduleResolution": "node16",
		"baseUrl": "./",
		"paths": {
			"@useCases/*": [
				"./src/use-cases/*"
			],
			"@repositories/*": [
				"./src/repositories/*"
			],
			"@lib/*": [
				"./src/lib/*"
			],
			"@/*": [
				"./src/*"
			],
		},
	},
	"exclude": [
		"node_modules/",
		".vscode",
		".migrations",
		"build"
	]
}